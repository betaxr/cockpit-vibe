# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Auth / Security
JWT_SECRET=replace-with-long-secret
ENCRYPTION_KEY=separate-32-char-key-for-db-encryption
OWNER_OPEN_ID=

# Database (MySQL legacy, optional)
DATABASE_URL=mysql://user:pass@localhost:3306/cockpit_vibe

# Mongo (primary data store)
MONGO_URI=mongodb://user:pass@localhost:27017
MONGO_DB=cockpit_vibe
TENANT_ID=default

# Collector Service
COLLECTOR_BASE_URL=http://localhost:4000
COLLECTOR_API_KEY=

# OAuth (optional)
OAUTH_SERVER_URL=
VITE_APP_ID=standalone

# Dev/Test toggles
ENABLE_TEST_LOGIN=true
SKIP_CSRF=true

# Frontend
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=
